{
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["src/lib_archive"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "outDir": "dist/esm",
    "types": ["node", "jest"]
  }
}
