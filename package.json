{
  "name": "@ipikuka/next-mdx-remote",
  "version": "1.0.3",
  "description": "It is an opinionated wrapper for the serialize function of the `next-mdx-remote` package that written by hashicorp",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "type": "module",
  "exports": {
    ".": "./dist/esm/index.js",
    "./serialize": "./dist/esm/serialize.js",
    "./rsc": "./dist/esm/rsc.js"
  },
  "typesVersions": {
    "*": {
      "serialize": [
        "./dist/esm/serialize.d.ts"
      ],
      "rsc": [
        "./dist/esm/rsc.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs",
    "test:file": "NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs plugins.test.tsx",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run prettier && npm run lint",
    "prebuild": "rimraf dist"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "global.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipikuka/next-mdx-remote.git"
  },
  "keywords": [
    "mdx",
    "markdown",
    "next",
    "nextjs",
    "next.js",
    "next-mdx-remote",
    "remark",
    "rehype"
  ],
  "author": "ipikuka <talatkuyuk@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/ipikuka/next-mdx-remote#readme",
  "bugs": {
    "url": "https://github.com/ipikuka/next-mdx-remote/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ipikuka/plugins": "^1.0.1",
    "next-mdx-remote": "^0.0.0-canary-20240314011020"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "dedent": "^1.5.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prettier-2": "npm:prettier@^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5",
    "vfile": "^6.0.1"
  },
  "peerDependencies": {
    "react": ">=16.x <=18.x",
    "react-dom": ">=16.x <=18.x"
  }
}
